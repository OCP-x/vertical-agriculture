<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.animal</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Herd Management" string="Herd Management" data-key="animal" groups="animal.group_animal_manager">
                        <h2>General Settings</h2>
                        <div class="row mt16 o_settings_container" name="general_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="livestock_product">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Livestock Product</span>
                                    <div class="text-muted">
                                        Product template for herd management
                                    </div>
                                    <div class="text-muted">
                                        <field name="product_template_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
